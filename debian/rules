#!/usr/bin/make -f
# export DH_VERBOSE=1

export LC_ALL=C.UTF-8
export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed
export DEB_BUILD_MAINT_OPTIONS = hardening=+all

%:
	dh ${@} --buildsystem cmake \
                --fail-missing \
                --with quilt

override_dh_auto_configure:
	dh_auto_configure -- \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DLIBRARY_INSTALL_BINDIR="/usr/lib/calamares" \
		-DCMAKE_INSTALL_RPATH="/usr/lib/calamares" \
                -DWEBVIEW_FORCE_WEBKIT=ON \
		-DWITH_KF5Crash=OFF \
		-DBUILD_TESTING=OFF \
                -DSKIP_MODULES="dracut dracutlukscfg dummycpp dummyprocess \
                                dummypython dummypythonqt initcpio initcpiocfg \
                                luksbootkeyfile luksopenswaphookcfg openrcdmcryptcfg \
                                plasmalnf plymouthcfg"


override_dh_fixperms:
	dh_fixperms
	chmod 755 debian/*/*/*/*/*/*/encrypt_hook
	chmod 755 debian/*/*/*/*/*/*/encrypt_hook_nokey

override_dh_auto_test:
	dh_auto_test | true

override_dh_missing:
	dh_missing --fail-missing

override_dh_makeshlibs:
	# just do nothing
