#!/usr/bin/make -f
export DH_VERBOSE=1

export LC_ALL=C.UTF-8
export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed
export DEB_BUILD_MAINT_OPTIONS = hardening=+all

%:
	dh ${@} --buildsystem cmake --with quilt

override_dh_auto_configure:
	dh_auto_configure -- \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
                -DWEBVIEW_FORCE_WEBKIT=ON \
		-DWITH_KF5Crash=OFF \
		-DBUILD_TESTING=OFF \
                -DSKIP_MODULES="dracut dracutlukscfg dummycpp dummyprocess \
                                dummypython dummypythonqt initcpio initcpiocfg \
                                luksbootkeyfile luksopenswaphookcfg openrcdmcryptcfg \
                                plasmalnf plymouthcfg"


override_dh_fixperms:
	dh_fixperms
	chmod 755 ./debian/calamares/usr/lib/*/calamares/modules/initramfscfg/encrypt_hook
	chmod 755 ./debian/calamares/usr/lib/*/calamares/modules/initramfscfg/encrypt_hook_nokey

override_dh_auto_test:
	dh_auto_test | true

override_dh_missing:
	dh_missing --fail-missing
