#!/usr/bin/make -f
export DH_VERBOSE=1

export LC_ALL=C.UTF-8
export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed
export DEB_BUILD_MAINT_OPTIONS = hardening=+all

%:
	dh ${@} --buildsystem cmake --with quilt

override_dh_auto_configure:
	dh_auto_configure -- \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DINSTALL_CONFIG=OFF \
		-DINSTALL_POLKIT=ON \
		-DBUILD_TESTING=OFF \
                -DWITH_PYTHON=ON \
		-DWITH_PYTHONQT=OFF \
		-DWITH_KF5Crash=OFF \
                -DWEBVIEW_FORCE_WEBKIT=ON \
                -DSKIP_MODULES="dracut \
				dracutlukscfg \
				dummycpp \
				dummyprocess \
				dummypython \
				dummypythonqt \
				initcpio \
				initcpiocfg \
				luksbootkeyfile \
				luksopenswaphookcfg\
                                openrcdmcryptcfg \
				plasmalnf \
				plymouthcfg"

override_dh_fixperms:
	dh_fixperms
	chmod 755 ./debian/calamares/usr/lib/*/calamares/modules/initramfscfg/encrypt_hook
	chmod 755 ./debian/calamares/usr/lib/*/calamares/modules/initramfscfg/encrypt_hook_nokey

override_dh_auto_test:
	dh_auto_test | true
